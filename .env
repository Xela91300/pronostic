# =============================================================================
# TIPSER PRO - Configuration API Football
# =============================================================================

# Clé API pour API-Football.com (v3.football.api-sports.io)
FOOTBALL_API_KEY=d1781fdccaf368063dc9102a2f5720ad

# Clé API alternative pour Football-Data.org (optionnelle)
FOOTBALL_DATA_API_KEY=33a972705943458ebcbcae6b56e4dee0

# =============================================================================
# Configuration de l'application
# =============================================================================

# Mode de fonctionnement (demo | api | hybrid)
APP_MODE=api

# Langue par défaut (fr | en | es)
LANGUAGE=fr

# Devise par défaut (EUR | USD | GBP)
CURRENCY=EUR

# Timezone (Europe/Paris | UTC | etc.)
TIMEZONE=Europe/Paris

# Cache duration in seconds (300 = 5 minutes)
CACHE_DURATION=300

# Nombre maximum de requêtes par minute
MAX_REQUESTS_PER_MINUTE=10

# =============================================================================
# Configuration des ligues par défaut
# =============================================================================

# ID des ligues principales à afficher (séparés par des virgules)
DEFAULT_LEAGUES=39,78,135,61,140

# 39 = Premier League (Angleterre)
# 78 = Bundesliga (Allemagne)
# 135 = Serie A (Italie)
# 61 = Ligue 1 (France)
# 140 = La Liga (Espagne)
# 94 = Primeira Liga (Portugal)
# 88 = Eredivisie (Pays-Bas)
# 71 | 85 | 103 | 113 | 144

# =============================================================================
# Paramètres de l'analyse AI
# =============================================================================

# Seuil de confiance minimum pour les prédictions (en %)
MIN_CONFIDENCE_THRESHOLD=60

# Seuil de valeur minimum pour les value bets (en %)
MIN_VALUE_THRESHOLD=5

# Bankroll par défaut (en euros)
DEFAULT_BANKROLL=1000

# Mise maximum en % du bankroll
MAX_STAKE_PERCENT=5

# =============================================================================
# Options de débogage
# =============================================================================

# Activer le mode debug (true/false)
DEBUG_MODE=false

# Loguer toutes les requêtes API (true/false)
LOG_API_REQUESTS=true

# Utiliser les données simulées en cas d'erreur API (true/false)
USE_FALLBACK_DATA=true
